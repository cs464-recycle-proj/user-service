# Example secrets file - DO NOT COMMIT THE ACTUAL secrets.yaml FILE
# Copy this file to values.secrets.yaml and fill in your actual secrets
# Usage: helm install myrelease ./helm -f values.yaml -f values.secrets.yaml

image:
  repository: registry.digitalocean.com/YOUR_REGISTRY/gamification-service
  tag: "latest"

postgresql:
  auth:
    password: "YOUR_POSTGRESQL_PASSWORD_HERE"

# RabbitMQ credentials (connects to shared RabbitMQ)
rabbitmq:
  username: "admin"
  password: "YOUR_SHARED_RABBITMQ_PASSWORD_HERE"

env:
  PGPASSWORD: "YOUR_POSTGRESQL_PASSWORD_HERE"
  RABBITMQ_USERNAME: "admin"
  RABBITMQ_PASSWORD: "YOUR_SHARED_RABBITMQ_PASSWORD_HERE"
